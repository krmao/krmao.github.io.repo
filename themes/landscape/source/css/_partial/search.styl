.local-search {
  position: relative;
  text-align: left;
  margin-bottom: 10px;
}

.local-search-input-cls {
  width: 200px;
  margin: 10px 0;
  padding: 8px 12px;
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;
}

#local-search-close {
  content: 'x';
  position: absolute;
  right: 10px;
  top: 10px;
  background: #fff;
  color: #888;
  border-radius: 100%;
  line-height: 20px;
  text-align: center;
  font-size: 16px;
  font-family: consolas;
  border: 1px solid #CCC;
  display: block;
  width: 20px;
  height: 20px;
  cursor: pointer;
  font-style: normal;
  font-weight: normal;
  transform: rotateZ(0);
  transition: all 0.3s;
  &:hover {
    border-color: #666;
    color: #222;
    transform: rotateZ(180deg);
    transition: all 0.3s;
  }
}

.local-search-result-cls {
  position: absolute;
  z-index: 99;
  width: 280px;
  min-height: 0;
  height: auto;
  background: #FFF;
  top: 50px;
  right: 32px;
  color: color-default
  font: 13px font-sans

  .local-search-empty {
    color: #888;
    line-height: 44px;
    text-align: center;
    display: block;
  }
  ul {
    width: 250px;
    max-height: 450px;
    min-height: 0;
    height: auto;
    overflow-y: auto;
    border: 1px solid #333;
    padding: 15px;
    box-shadow: 1px 2px 4px #333;
    li {
      text-align: left;
      border-bottom: 1px solid #333;
      padding-bottom: 15px;
      margin-bottom: 15px;
      line-height: 20px;

      &:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
      }
      a {
        font-size: 14px;
        font-weight: bold;
        text-decoration: none;
      }
      a:link, a:visited {
        color: black;
      }
      a:hover {
        color: dodgerblue;
      }

      p {
        margin-top: 5px;
        max-height: 60px;
        overflow: hidden;
        font-weight: normal;
      }
      em.search-keyword {
        color: #fa5333;
        font-weight: bold;
        font-style: italic;
      }
    }
  }
}

.local-search-plugin {
  .local-search-input-cls {
    opacity: 0.6;
    width: 160px;
    transition: all 0.3s;
    &:hover {
      opacity: 1;
      width: 200px;
      transition: all 0.3s;
    }
  }
  .icon {
    position: relative;
    left: -30px;
    color: #999;
    cursor: pointer;
  }
}